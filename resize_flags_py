from PIL import Image
from pathlib import Path

def resize_images_in_directory(input_path: Path, output_path: Path, new_size=(33, 25)):
    output_path.mkdir(parents=True, exist_ok=True)

    for file_path in input_path.glob('*.png'):
        with Image.open(file_path) as img:
            img_resized = img.resize(new_size, Image.Resampling.NEAREST)
            img_resized.save(output_path / file_path.name)

if __name__ == "__main__":
    input_folder = Path("E:/Python/Python_WORK/Datei_Info_Creator/gui/resource_collection_files/_labels/nations")
    output_folder = Path("E:/Python/Python_WORK/Datei_Info_Creator/gui/resource_collection_files/_labels/nations_resized")
    
    resize_images_in_directory(input_folder, output_folder)
